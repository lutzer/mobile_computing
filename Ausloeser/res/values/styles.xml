<resources xmlns:android="http://schemas.android.com/apk/res/android">
	 <style name="Theme.Styled" parent="Theme.Sherlock.Light.DarkActionBar">
	    <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
	    <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
	</style>
	
	<style name="Widget.Styled.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse"> 
	    <item name="android:background">@drawable/actionbar_bg</item>
	</style>
	
	<style name="MainTheme">
	    <item name ="android:background">@drawable/app_bg</item>
	</style>
	
	<style name="View">
	    <item name = "android:layout_marginLeft">15dp</item>
	    <item name = "android:layout_marginRight">15dp</item>
	    <item name = "android:layout_marginBottom">15dp</item>
	</style>
	
	<style name="View.List">
	    <item name="android:background">@drawable/list_bg</item>
	    <item name="android:layout_marginTop">0dp</item>
	</style>
	
	<style name="View.TitleStripe">
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:orientation">horizontal</item>
	    <item name="android:gravity">center</item>
	    <item name="android:layout_marginTop">10dp</item>
	    <item name="android:layout_marginBottom">5dp</item>
	</style>
	
	<style name="Item">
	    <item name="android:layout_marginLeft">8dp</item>
	    <item name="android:layout_marginRight">8dp</item>
	</style>
	
	<style name="Item.ListImage">
	    <item name="android:layout_height">48dp</item>
	    <item name="android:layout_width">48dp</item>
	    <item name="android:paddingRight">10dp</item>
	</style>
	
	<style name="Item.Checkbox">
	    <item name="android:layout_width">48dp</item>
	    <item name="android:layout_height">48dp</item>
	    <item name="android:background">@drawable/toggle_button</item>
	    <item name="android:textOn"></item>
		<item name="android:textOff"></item>
	</style>
	
	<style name="Item.Button">
	    <item name="android:layout_width">48dp</item>
	    <item name="android:layout_height">48dp</item>
	    <item name="android:background">@drawable/button</item>
	    <item name="android:text"></item>
	</style>
	
	<style name="Item.ButtonNumberInput">
	    <item name="android:layout_width">48dp</item>
	    <item name="android:layout_height">48dp</item>
	    <item name="android:background">@drawable/button</item>
	    <item name="android:text">#</item>
	    <item name="android:textColor">#FFFFFF</item>
	    <item name="android:textSize">18sp</item>
	    <item name="android:textStyle">bold</item>
	</style>
	
	<style name="Item.ShutterButton">
	    <item name="android:layout_width">120dp</item>
	    <item name="android:layout_height">120dp</item>
	    <item name="android:background">@drawable/button_shutter</item>
	    <item name="android:text"></item>
	    <item name="android:textOn"></item>
		<item name="android:textOff"></item>
	</style>
	
	<style name="Item.ShutterButtonHold">
	    <item name="android:layout_width">120dp</item>
	    <item name="android:layout_height">120dp</item>
	    <item name="android:background">@drawable/button_shutter_hold</item>
	    <item name="android:text"></item>>
	</style>
	
	<style name="Item.Slider">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:secondaryProgress">0</item>
	    <item name="android:progressDrawable">@drawable/slider</item>
	    <item name="android:thumb">@drawable/slider_knob</item>
	    <item name="android:layout_margin">0dp</item>
	    <item name="android:paddingLeft">7dp</item>
	    <item name="android:paddingRight">7dp</item>
	</style>
	
	<style name="Item.ProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:secondaryProgress">0</item>
	    <item name="android:progressDrawable">@drawable/slider</item>
	    <item name="android:layout_margin">0dp</item>
	    <item name="android:paddingLeft">7dp</item>
	    <item name="android:paddingRight">7dp</item>
	    <item name="android:max">100</item>
	    <item name="android:progress">100</item>
	</style>
	
	<style name="Text">
	    <item name="android:textSize">14sp</item>
	    <item name="android:textColor">#000000</item>        
	</style>
	
	<style name="Text.TitleStripe">
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:paddingLeft">15dp</item>
	    <item name="android:paddingRight">15dp</item>
	    <item name="android:textSize">20sp</item>  
	</style>
	
	<style name="Text.ListTitle">
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:textSize">18sp</item>
	    <item name="android:textColor">#FFFFFF</item> 
	    <item name="android:textStyle">bold</item>   
	</style>
	
	<style name="Text.ListDescription">
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:textColor">#FFFFFF</item>
	    <item name="android:maxLines">3</item>    
	</style>
	
	<style name="Text.SliderLabel">
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:gravity">center</item>
		<item name="android:textSize">16sp</item>
	</style>
	
	<style name="Text.ProgressLabel" parent="Text.SliderLabel">
	    <item name="android:layout_marginRight">11dp</item>
	</style>
	
	<style name="Text.SliderNameWithButton">
	    <item name="android:layout_height">48dp</item>
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:gravity">center</item>
		<item name="android:textSize">18sp</item>
	</style>
	
	<style name="Text.SliderName" parent="Text.SliderNameWithButton">
		<item name="android:layout_marginLeft">11dp</item>
	</style>
	
	<style name="Text.ModeDescription" parent="Text.SliderName">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:gravity">center</item>
	</style>
	
	<style name="Text.SliderSwitch">
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:gravity">center</item>
		<item name="android:textSize">18sp</item>
	</style>
	
	<style name="Spacer">
	    <item name="android:layout_height">1dp</item>
	    <item name="android:layout_width">1dp</item>
	    <item name="android:layout_weight">1</item>
	</style>

</resources>